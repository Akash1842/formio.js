<div class="formio-tagpad-container clearfix">
  <div ref="canvasContainer" class="formio-tagpad-image-container">
      <div ref="background" class="formio-tagpad-background">
        {% if (!ctx.component.image && !ctx.component.imageUrl) { %}
            Background image is not specified. Tagpad doesn\'t work without background image
        {% } %}
        {% if (ctx.component.imageUrl && !(ctx.component.imageType === 'svg')) { %}
            <img src={{ctx.component.imageUrl}} ref="image" alt="" width="100%"/>
        {% } %}
      </div>
      <div ref="canvas" class="formio-tagpad-canvas"></div>
  </div>
  <div ref="formContainer" class="formio-tagpad-form-container">
      <div ref="form" class="formio-tagpad-form">
        {{ctx.tagpadForm}}
      </div>
  </div>
</div>
