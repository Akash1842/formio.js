{% if (node.isRoot) { %}
  <div ref="root" class="list-group-item">
{% } else { %}
  <li ref="node" class="list-group-item col-sm-12 tree__level tree__level_{{ odd ? 'odd' : 'even' }}">
{% } %}
  {% if (content) { %}
    <div ref="content" class="tree__node-content">
      {{ content }}
    </div>
  {% } %}
  {% if (childNodes && childNodes.length) { %}
    <ul ref="childNodes" class="tree__node-children list-group row">
      {{ childNodes.join('') }}
    </ul>
  {% } %}
{% if (node.isRoot) { %}
  </div>
{% } else { %}
  </li>
{% } %}
