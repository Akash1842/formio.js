{% if (!ctx.label.hidden && ctx.label.labelPosition !== 'bottom') { %}
  <label class="control-label {{ctx.label.className}}">
    {% if (!ctx.label.hidden) { %}
      {{ ctx.t(ctx.component.label) }}
      {% if (ctx.component.tooltip) { %}
        <i ref="tooltip" class="{{ctx.iconClass('question-sign')}} text-muted"></i>
      {% } %}
    {% } %}
  </label>
{% } %}
{{ctx.element}}
{% if (!ctx.label.hidden && ctx.label.labelPosition === 'bottom') { %}
  <label class="control-label {{ctx.label.className}}">
  {{ctx.t(ctx.component.label)}}
  {% if (ctx.component.tooltip) { %}
    <i ref="tooltip" class="{{ctx.iconClass('question-sign')}} text-muted"></i>
  {% } %}
  </label>
{% } %}
{% if (ctx.component.description) { %}
  <div class="help-block">{{ctx.t(ctx.component.description)}}</div>
{% } %}
